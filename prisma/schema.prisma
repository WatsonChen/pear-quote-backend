// prisma/schema.prisma

generator client {
  provider = "prisma-client"   // ← 新的寫法，取代 prisma-client-js
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Quote {
  id        String   @id @default(uuid())
  title     String
  content   String?
  createdAt DateTime @default(now())
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

