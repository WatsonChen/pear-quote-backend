// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Quote {
  id String @id @default(uuid())

  // Customer Relation
  customerId   String?
  customer     Customer? @relation(fields: [customerId], references: [id])
  customerName String // Keep for display/snapshot purposes

  projectName  String
  projectType  String
  expectedDays Int?
  description  String?
  status       String  @default("DRAFT")

  // Financials
  totalAmount Float?
  wonAmount   Float? // Actual deal amount when status is WON
  totalMargin Float?
  totalCost   Float?

  // Terms
  paymentTerms String?
  validityDays Int?     @default(30)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  items QuoteItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id          String  @id @default(uuid())
  name        String
  industry    String?
  description String?
  aiSummary   String?
  email       String?
  phone       String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  quotes Quote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuoteItem {
  id      String @id @default(uuid())
  quoteId String
  quote   Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  description    String
  estimatedHours Float
  suggestedRole  String
  hourlyRate     Float
  amount         Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SystemSettings {
  id           String  @id @default(uuid())
  companyName  String?
  taxId        String?
  contactEmail String?

  // Rates
  juniorRate Float?
  seniorRate Float?
  pmRate     Float?
  designRate Float?
  roleRates  Json? // Array of { role: String, rate: Number }

  // Margin
  targetMarginMin Float?
  targetMarginMax Float?

  // Stamps
  companySealUrl               String?
  companyRepresentativeSealUrl String?

  // Project Types (Customizable)
  projectTypes Json? // Array of { value: String, label: String }

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  updatedAt DateTime @updatedAt
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String?
  otpCode      String?
  otpExpiresAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  quotes       Quote[]
  customers    Customer[]
  settings     SystemSettings?
}
